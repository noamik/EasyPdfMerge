<Window x:Class="EasyPdfMerge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyPdfMerge"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="mergeButton" Content="Merge" HorizontalAlignment="Left" Margin="417,269,0,0" VerticalAlignment="Top" Width="90" Click="button_Click"/>
        <Button x:Name="addPdfButton" Content="Add PDFs" HorizontalAlignment="Left" Margin="10,269,0,0" VerticalAlignment="Top" Width="75" Click="button1_Click"/>
        <ListBox x:Name="filesListBox" HorizontalAlignment="Left" Height="237" Margin="10,10,0,0" VerticalAlignment="Top" Width="497"/>
        <ComboBox x:Name="comboBoxMergeModes" HorizontalAlignment="Left" Margin="281,267,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0">
            <ComboBoxItem Content="Plain" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="2on1 Horizontally" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="2on1 Portrait" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>

    </Grid>
</Window>
